<form action="/plants/search" method="get">
	<div class="ui fluid search selection dropdown">
	  	<input type="hidden" name="id">
	  		<i class="search icon"></i>
	  		<div class="default text">Search by plant name</div>
	  		<div class="menu">
				<% plants.sort(function(a, b){ %>
					<% var x = a.name.toLowerCase(); %>
				    	<% var y = b.name.toLowerCase(); %>
				    	<% if (x < y) {return -1;} %>
				    	<% if (x > y) {return 1;} %>
				    	<% return 0; %>
				<% }).forEach(function(plant){ %>
	  				<div class="item" data-value="<%= plant.id %>">
	  				  	<b><%= plant.name %></b> <small><i><%= plant.botanicalName %></i></small>
	  				  </div>
	  			<% }); %>	
	  		</div>
	 </div>
 </form>