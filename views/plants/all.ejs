<div class="container">
<% if(plants.length <= 0) { %>
	<h2>Nothing in the database yet</h2>
<% } else { %>
	<div class="pure-g">
		<% plants.sort(function(a, b){ %>
			<% var x = a.name.toLowerCase(); %>
    		<% var y = b.name.toLowerCase(); %>
    		<% if (x < y) {return -1;} %>
    		<% if (x > y) {return 1;} %>
    		<% return 0; %>
		<% }).forEach(function(item){ %>
			<div class="pure-u-1 pure-u-md-1-4">
				<% include ../partials/plantgrid %>
				<% if(currentUser){ %>
					<form method="post" action="/plants">
						<input type="hidden" name="id" value="<%= item.id %>">
						<button type="submit" class="ui labeled icon mini button">
  							<i class="plus icon"></i>
  							Add Plant
						</button>
					</form>						
				<% } else { %>
					<a href="/auth/login">
						<button class="ui labeled icon mini button">
  							<i class="plus icon"></i>
  							Add Plant
						</button>
					</a>
				<% } %>
			</div>
		<% }); %>
	</div>
</div>
	<a href="#" alt="Back to Top">Top</a>
<% } %>

