<header class="plants-hero">
	<h1>Plants</h1>
		<% if(plants.length > 0) { %>
		<form action="/plants/search" method="get">
			<div class="ui fluid search selection dropdown">
	  			<input type="hidden" name="id">
	  			<i class="search icon"></i>
	  			<div class="default text">Search Plants</div>
	  			<div class="menu">
					<% plants.sort(function(a, b){ %>
						<% var x = a.name.toLowerCase(); %>
				    	<% var y = b.name.toLowerCase(); %>
				    	<% if (x < y) {return -1;} %>
				    	<% if (x > y) {return 1;} %>
				    	<% return 0; %>
					<% }).forEach(function(plant){ %>
	  				  	<div class="item" data-value="<%= plant.id %>">
	  				  		<b><%= plant.name %></b> <small><i><%= plant.botanicalName %></i></small>
	  				  	</div>
	  					<% }); %>	
	  			</div>
	 		</div>
 		</form>
		<% } %>
</header>
<div class="container">
<% if(plants.length <= 0) { %>
	<h2>Nothing in the database yet</h2>
<% } else { %>
	<div class="pure-g">
		<% plants.sort(function(a, b){ %>
			<% var x = a.name.toLowerCase(); %>
    		<% var y = b.name.toLowerCase(); %>
    		<% if (x < y) {return -1;} %>
    		<% if (x > y) {return 1;} %>
    		<% return 0; %>
		<% }).forEach(function(item){ %>
			<div class="pure-u-1 pure-u-md-1-4">
				<% include ../partials/plantgrid %>
				<% if(currentUser){ %>
					<form method="post" action="/plants">
						<input type="hidden" name="id" value="<%= item.id %>">
						<input type="submit" value="+">
					</form>
				<% } else { %>
						<a href="/auth/login">+</a>
				<% } %>
			</div>
		<% }); %>
	</div>
</div>
	<a href="#" alt="Back to Top">Top</a>
<% } %>

