<header class="plants-hero">
	<h1>Plants</h1>
	<div class="pure-g">
		<div class="pure-u-1 pure-u-md-1-4">
			<h2>Water</h2>
			<hr>
			XXXXX
		</div>
		<div class="pure-u-1 pure-u-md-1-4">
			<h2>Light</h2>
			<hr>
			XXXXX
		</div>
		<div class="pure-u-1 pure-u-md-1-2">
			<span class="tag-large">cat-friendly</span> 
			<span class="tag-large">dog-friendly</span> 
			<span class="tag-large">palm</span> 
			<span class="tag-large">low maintenance</span>  
			<span class="tag-large">orchid</span> 
			<span class="tag-large">foliage</span> 
			<span class="tag-large">flowering</span> 
			<span class="tag-large">ivy</span> 
			<span class="tag-large">bromeliad</span> 
			<span class="tag-large">fern</span> 
			<span class="tag-large">succulent & cactus</span> 
		</div>
	</div>
</header>
<% if(plants.length <= 0) { %>
	<h2>Nothing in the database yet</h2>
<% } else { %>
	<div class="pure-g">
		<% plants.forEach(function(item){ %>
			<div class="pure-u-1 pure-u-md-1-4">
				<% include ../partials/plantgrid %>
				<% if(currentUser){ %>
					<form method="post" action="/plants">
						<input type="hidden" name="id" value="<%= item.id %>">
						<input type="submit" value="+">
					</form>
				<% } else { %>
						<a href="/auth/login">+</a>
				<% } %>
			</div>
		<% }); %>
	</div>
	<a href="#" alt="Back to Top">Top</a>
<% } %>

