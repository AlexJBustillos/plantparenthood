<header class="plants-hero">
	<h1>Plants</h1>
</header>
<% if(tag.plants.length <= 0) { %>
	<p>No plants with this tag exist.</p>
<% } else { %>
	<div class="container">
		<h3 class="ui header">
			<i class="tag icon"></i>
			<div class="content">
				Showing plants tagged <span class="ui label big"><%= tag.content %></span>
			</div>
		</h3>
		<a href="/plants">Back to all plants</a>
	</div>
	<div class="container">
		<div class="ui stackable four column grid">
		<% tag.plants.sort(function(a, b){ %>
			<% var x = a.name.toLowerCase(); %>
    		<% var y = b.name.toLowerCase(); %>
    		<% if (x < y) {return -1;} %>
    		<% if (x > y) {return 1;} %>
    		<% return 0; %>
		<% }).forEach(function(item){ %>
			<div class="column">
				<% include ../partials/plantgrid %>
				<% if(currentUser){ %>
					<form method="post" action="/plants">
						<input type="hidden" name="id" value="<%= item.id %>">
						<button type="submit" class="ui labeled icon mini button">
  							<i class="plus icon"></i>
  							Add Plant
						</button>
					</form>						
				<% } else { %>
					<a href="/auth/login">
						<button class="ui labeled icon tiny button">
  							<i class="plus icon"></i>
  							Add Plant
						</button>
					</a>
				<% } %>
			</div>
		<% }); %>
	</div>
</div>
	<a href="#" alt="Back to Top">Top</a>
<% } %>