<header class="plants-hero small">
	<h1>Journal</h1>
</header>
<div class="ui stackable centered padded grid">
	 <div class="twelve wide column">
		<div class="ui comments">
			<div class="comment">
				<div class="content">
					<b><%= journal.title %></b>
					<div class="metadata">
					<div class="date"><%= moment(journal.updatedAt).calendar() %></div>
						<a href="/users/journal/edit/<%= journal.id %>">
							<button class="ui basic small button circular icon">
								<i class="edit icon"></i>
							</button>
						</a>
						<a href="/users/journal/<%= journal.id %>" class="delete-journal">
							<button class="ui basic small button circular icon">
	  							<i class="icon delete"></i>
							</button></a>
      				</div>
      			</div>
	      		<div class="text">
	       			<p><%= journal.content %></p>
	      		</div>
      		</div>
		</div>
		<a href="/users/journal">Back to All Entries</a>
	</div>
</div>


