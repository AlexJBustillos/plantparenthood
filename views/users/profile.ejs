<div class="pure-g">
	<!-- Left column -->
	<div class="pure-u-1 pure-u-md-1-4 sidebar">
		<% if(user.userImg){ %>
			Profile pic here
		<% } else { %>
			<img src="/img/plant-pot.png">
		<% } %>
		<h2><%= currentUser.name %></h2>
		<p><a href="/users/plants">Your Plants</a></p>
		<p><a href="/users/journal">Your Journal</a></p>
	</div>
	<!-- Right column -->
	<div class="pure-u-1 pure-u-md-3-4">
		<header class="profile-hero">
			<div class="pure-u-1 pure-u-md-1-2">
				<% if(user.lastWatered){ %>
					<p>It's been <h2><%= moment(user.lastWatered).fromNow(true) %></h2> since you last checked your plants.</p>
				<% } else { %>
					<p>When did you last check on your plants?</p>
				<% } %>
			</div>
			<div class="pure-u-1 pure-u-md-1-4">
				<p>Last Checkup Date:</p>
				<form method="post" action="/users/lastwatered">
					<input type="hidden" name="id" value="<%= currentUser.id %>">
					<input type="date" name="lastWatered" id="wateringCalendar">
					<input type="submit" value="Update">
				</form>
			</div>
		</header>
		<div class="pure-u-1 pure-u-md-1-2">
			<h2>Your Plants</h2>
			<% if(user.plants.length <= 0) { %>
				<p>No plants added</p>
			<% } else { %>
				<p>You currently own <%= user.plants.length %> plants.</p>
				<p><a href="plants">View All Plants</a></p>
					<% user.plants.sort(function(a, b){return 0.5 - Math.random()}).slice(0,3).forEach(function(item){ %>
						<a href="/plants/<%= item.id %>">
							<div class="plant-image plant-image-small">
								<% if (item.imageUrl){ %>
									<img src="<%= item.imageUrl %>" alt="<%= item.name %>" class="pure-img">
								<% } else { %>
									<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e6/Sedum_rubrotinctum.jpg/220px-Sedum_rubrotinctum.jpg" alt="Placeholder">
								<% } %>
							</div>
						</a>
					<% }); %>
			<% } %>
		</div>
		<div class="pure-u-1 pure-u-md-1-4">
			<h2>Journal</h2>
			<% if(user.journals.length < 1) { %>
				<p>No entries yet.</p>
			<% } else { %>
				<p>You have <%= user.journals.length %> entries.</p>
				<% user.journals.reverse(function(a, b){return a - b}).slice(0,3).forEach(function(j){ %>
					<h5><a href="journal/<%= j.id %>"><%= j.title %></a> <em><%= moment(j.updatedAt).calendar() %></em></h5>
				<% }); %>
				<p><a href="journal">View All</a></p>
			<% } %>
				<p><a href="journal/new">Write New Entry</a></p>
		</div>
	</div>
</div>
