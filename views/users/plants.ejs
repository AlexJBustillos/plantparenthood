<header class="plants-hero small">
	<h1>Your Plants</h1>
</header>
<div class="container">
<% if(user.plants.length <= 0) { %>
	<h2>No plants added</h2>
	<p><a href="/plants">Browse all plants</a></p>
<% } else { %>
	<div class="ui stackable four column grid plant-grid">
		<% user.plants.sort(function(a, b){ %>
			<% var x = a.name.toLowerCase(); %>
    		<% var y = b.name.toLowerCase(); %>
    		<% if (x < y) {return -1;} %>
    		<% if (x > y) {return 1;} %>
    		<% return 0; %>
		<% }).forEach(function(item){ %>
			<div class="column">
				<% include ../partials/plantgrid %>
				<a href="/plants/<%= item.id %>" class="delete-plant">
				<button class="ui labeled icon mini basic button">
  					<i class="remove icon"></i>
  					Delete Plant
				</button>
				</a>
			</div>
		<% }); %>
	</div>
<% } %>
</div>